@{
    ViewBag.Title = "我的購物車";
}
@using (Html.BeginForm())
{
    <div class="cart_body">
        <div class="Header">
            <h3 class="Heading">我的購物車</h3>
            <input type="hidden" name="id" value="3" />
        </div>
        <div class="Steps">
            <ol class ="breadcrumb">
                <li id="Step_cart" class="breadcrumb-item Step_Current">購物車</li>
                <li id="Step_Confirm" class="breadcrumb-item">填寫資料與付款</li>
                <li id="Step_Finish" class="breadcrumb-item">訂購完成</li>
            </ol>
        </div>
        <div class="Cart-Container" style="width: 75%;">
            <div class="Cart-Items">
                <div class="checkboxes">
                    <img class="uncheckbox CartIconbtn" id="cb1" src="~/icons/icons8-unchecked-32.png" />
                    <img class="checkbox CartIconbtn" src="~/icons/icons8-checkbox-32.png" />
                    <input type="checkbox" id="prodcb">
                </div>
                <div class="image-box">
                    <img src="~/images/8.jpg" />
                </div>
                <div class="about">
                    <h1 class="title">澎湖兩天一夜</h1>
                    <h3 class="subtitle">2023/07/31</h3>
                </div>
                <div class="counter">
                    <span class="btn btn-outline-dark btn-sm CartIconbtn cartMinus">－</span>
                    <div class="count">1</div>
                    <span class="btn btn-outline-dark btn-sm CartIconbtn cartPlus">＋</span>
@*                    <img src="~/icons/icons8-minus-48.png" class="CartIconbtn cartMinus">
                    <div class="count">1</div>
                    <img src="~/icons/icons8-plus-48.png" class="CartIconbtn cartPlus">
*@                </div>
                <div class="prices">
                    <img src="~/icons/icons8-edit-48.png" class="CartIconbtn cartEdit">
                    <img src="~/icons/icons8-like-48 (1).png" class="CartIconbtn cartLike">
                    <img src="~/icons/icons8-like-48.png" class="CartIconbtn cartUnlike">
                    <img src="~/icons/icons8-close-48.png" class="CartIconbtn cartDele">
                    <div class="amount">NTD 5999</div>
                </div>
            </div>
            <div class="Cart-Items">
                <div class="checkboxes">
                    <img class="uncheckbox CartIconbtn" src="~/icons/icons8-unchecked-32.png" />
                    <img class="checkbox CartIconbtn" src="~/icons/icons8-checkbox-32.png" />
                    <input type="checkbox" id="prodcb">
                </div>
                <div class="image-box">
                    <img src="~/images/9.jpg" />
                </div>
                <div class="about">
                    <h1 class="title">澎湖三天兩夜</h1>
                    <h3 class="subtitle">2023/08/31</h3>
                </div>
                <div class="counter">
                    <span class="btn btn-outline-dark btn-sm CartIconbtn cartMinus">－</span>
                    <div class="count">1</div>
                    <span class="btn btn-outline-dark btn-sm CartIconbtn cartPlus">＋</span>
                </div>
                <div class="prices">
                    <img src="~/icons/icons8-edit-48.png" class="CartIconbtn cartEdit">
                    <img src="~/icons/icons8-like-48 (1).png" class="CartIconbtn cartLike">
                    <img src="~/icons/icons8-like-48.png" class="CartIconbtn cartUnlike">
                    <img src="~/icons/icons8-close-48.png" class="CartIconbtn cartDele">
                    <div class="amount">NTD 7999</div>
                </div>
            </div>

        </div>
        <div class="SelectAll mb-0">
            <img class="uncheckall CartIconbtn" src="~/icons/icons8-uncheck-all-48.png" />
            <img class="checkall CartIconbtn" src="~/icons/icons8-check-all-48.png" />
            <input type="checkbox" id="selectall">
            <label for="selectall" class="mr-2">全選</label>
            <span class="btn btn-outline-dark btn-sm">刪除所有已選項目</span>
        </div>
        <div class="checkout">
            <div>
                <div class="totalPriceBox">
                    <div class="d-flex align-items-center flex-column align-self-center">
                        <div class="Subtotal">總金額</div>
                        <div class="items">1 項商品</div>
                    </div>
                    <div class="d-flex align-items-center flex-column">
                        <span class="badge badge-light">可獲得 60 點!</span>
                        <div class="total-amount ml-2 mr-2">NTD 5999</div>
                    </div>
                </div>
            </div>
            <input type="submit" class="mt-2 btn my-btn-primary btn-lg col-4" value="去結帳" />
        </div>
    </div>
}




@section Styles{
    <link rel="stylesheet" href="~/css/Cart.css" asp-append-version="true" />

}

@section Scripts{
    <script src="~/js/jsCart.js"></script>
    <script src="~/js/jquery-3.4.1.js"></script>

    <script>
        $('.cartDele').on('click', function () {
            $(this).closest('.Cart-Items').fadeOut();
        })
    </script>

}

