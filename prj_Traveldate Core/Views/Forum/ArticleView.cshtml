            if (createStatusInput) {
                var createStatusValue = createStatusInput.value;
                if (createStatusValue === "0"){
                    publishArticle()
                }
            }
        })
    
        //發布
        function publishArticle() {
            Swal.fire({
                icon: 'success',
                title: '發布成功!',
                showConfirmButton: false,
                timer: 1500
            })
        }
    </script>




