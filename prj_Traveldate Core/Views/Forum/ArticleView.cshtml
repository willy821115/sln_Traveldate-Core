@functions {
    public string GetStarClass(double? rating, int index)
    {
        if (rating.HasValue)
        {
            int filledStars = (int)Math.Floor(rating.Value);
            double remainder = rating.Value - filledStars;
            if (index <= filledStars)
            {
                return "active";
            }
            else if (index == filledStars + 1 && remainder >= 0.5)
            {
                return "half-filled";
            }
        }
        return "";
    }
}
