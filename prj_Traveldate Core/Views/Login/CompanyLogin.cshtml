
@{
    ViewData["Title"] = "CompanyLogin";
}

<h1>廠商登入</h1>


<form>

    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">帳號</label>
        <input type="tel" class="form-control" id="exampleInputEmail1" aria-describedby="phoneHelp" pattern="[0-9]{8}">
        <div id="phoneHelp" class="form-text">請輸入統一編號，格式為八位數字</div>
        <br>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">密碼</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">記住密碼</label>
        </div>
        <button type="submit" class="btn btn-primary">登入</button>
                <br>
</form>

<br>

<div class="downlabel">
    <a asp-area="" asp-controller="Login" asp-action="CompanySignUp">建立廠商帳戶</a>
    <label for="exampleInputEmail1" class="form-label">忘記密碼</label>
    <a asp-area="" asp-controller="Login" asp-action="Login">切換客戶登入</a>
</div>
<a asp-area="" asp-controller="Dashboard" asp-action="List">開發用廠商登入</a>
@section Styles
{
    <style>



        .btn {
            /* 設定按鈕的通用樣式，比如字體、邊框等 */
            font-size: 16px;
            /* 按鈕的內邊距（上下 10 像素，左右 10 像素） */
            padding: 10px 20px;
            /* 去除按鈕的邊框 */
            border: none;
            /* 設置滑鼠游標樣式為指針（表示可點擊） */
            cursor: pointer;
            /* 按鈕的圓角半徑為 4 像素 */
            border-radius: 10px;
            /* 按鈕背景 */
            background-color: #155074;
            /* 文字顏色 */
            color: #F8FDCF;
        }




        .downlabel label:hover {
            color: #9BE8D8; /* 滑鼠滑過顏色改變為 */
        }

        .downlabel label {
            margin-right: 30px;
            font-size: 16px;
        }

        /* 定義輸入框的默認樣式 */
        .form-control {
            border: 3px solid #ccc; /* 默認的邊框顏色 */
            border-radius: 10px;
        }

            /* 定義輸入框在聚焦時的樣式 */
            .form-control:focus {
                border-color: #E2F6CA; /* 選中時將邊框顏色更改為 #9BE8D8 */
                outline: none; /* 這將移除默認的聚焦輪廓（藍色輪廓） */
            }


        .form-label {
            color: #155074
        }
    </style>
}

