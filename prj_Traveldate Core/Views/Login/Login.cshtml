
@{
    ViewData["Title"] = "Login";
}

<h1>會員登入</h1>



<form>

    <button type="submit" class="btn btn-primary">第三方登入</button>
    <br>
    <br>
    <div class="mb-3">
        <label for="exampleInputEmail1" class="form-label">帳號</label>
        <input type="tel" class="form-control" id="exampleInputEmail1" aria-describedby="phoneHelp" pattern="09[0-9]{8}">
        <div id="phoneHelp" class="form-text">請輸入註冊時手機號碼。</div>
        <br>

        <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label">密碼</label>
            <input type="password" class="form-control" id="exampleInputPassword1">
        </div>

        <div class="mb-3 form-check">
            <input type="checkbox" class="form-check-input" id="exampleCheck1">
            <label class="form-check-label" for="exampleCheck1">記住密碼</label>
        </div>
        <button type="submit" class="btn btn-primary">登入</button>
        <br>
</form>

<br>

<div class="downlabel">

        <a asp-area="" asp-controller="Login" asp-action="SignUp">建立帳戶</a>
        <label for="exampleInputEmail1" class="form-label">忘記密碼</label>
    <a asp-area="" asp-controller="Login" asp-action="CompanyLogin">切換廠商登入</a>
    <br />
<a asp-area="" asp-controller="Member" asp-action="Index">開發用會員登入</a>
<a asp-area="" asp-controller="Platform" asp-action="Review">開發用平台登入</a>
</div>
 @section Styles
 {
    <style>



        .btn {
            /* 設定按鈕的通用樣式，比如字體、邊框等 */
            font-size: 16px;
            /* 按鈕的內邊距（上下 10 像素，左右 10 像素） */
            padding: 10px 20px;
            /* 去除按鈕的邊框 */
            border: none;
            /* 設置滑鼠游標樣式為指針（表示可點擊） */
            cursor: pointer;
            /* 按鈕的圓角半徑為 10 像素 */
            border-radius: 10px;
            /* 藍色背景 */
            background-color: #155074;
            /* 文字顏色 */
            color: #F8FDCF;
        }
        /* 當滑鼠指向提交按鈕時，將背景顏色變更為#0056b3 */
        button[type="submit"]:hover {
            background-color: #78C1F3;
        }



        .downlabel label:hover,
        .downlabel a:hover {
            color: #9BE8D8; /* 滑鼠滑過時的文字顏色 */
        }



        .downlabel label {
            margin-right: 30px;
            font-size: 16px;
        }

        /* 定義輸入框的默認樣式 */
        .form-control {
            border: 3px solid #ccc; /* 默認的邊框顏色 */
            border-radius: 10px;
        }

            /* 定義輸入框在聚焦時的樣式 */
            .form-control:focus {
                border-color: #E2F6CA; /* 選中時將邊框顏色更改為 #9BE8D8 */
                outline: none; /* 這將移除默認的聚焦輪廓（藍色輪廓） */
            }

        .form-label {
            color: #155074
        }
    </style>
 }