
@{
    ViewData["Title"] = "EmployeePlatform";
}

<div class="container">
    <div class="sidebar">
        <h3>員工管理平台</h3>
        <button onclick="showContent('content1')">商品審核</button>
        <button onclick="showContent('content2')">停權管理</button>
        <button onclick="showContent('content3')">優惠卷</button>
    </div>
    <div class="content" id="contentArea">
        <!-- 右側iframe，初始顯示內容1 -->
        <iframe id="iframeContent" src="content1" style="border: none; width: 100%; height:800px;"></iframe>
    </div>
</div>

@section Styles
{
    <style>
        /* 設定全局樣式 */
        body {
            font-family: Arial, sans-serif; /* 設定字體 */
            background-color: #f2f2f2; /* 設定背景顏色 */
            padding: 20px; /* 設定整體內邊距 */
        }

        /* 使用flex布局 */
        .container {
            display: flex;
        }

        /* 左側側邊欄 */
        .sidebar {
            width: fit-content; /* 寬度自適應內容 */
            height: auto; /* 高度自適應內容 */
            background-color: #F8FDCF; /* 設定背景顏色 */
            border: 1px solid #ccc; /* 設定邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            padding: 10px; /* 設定內邊距 */
            margin-right: 20px; /* 設定與內容區域的右邊距 */
        }

        /* 右側內容區域 */
        .content {
            /* 不設置寬度，允許自動延伸以填充剩餘空間 */
            height: auto; /* 高度自適應內容 */
            flex: 1; /* 佔滿剩餘空間 */
            background-color: #E2F6CA; /* 設定背景顏色 */
            border: 1px solid #ccc; /* 設定邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            padding: 20px; /* 設定內邊距 */
        }

        /* 左側側邊欄的標題樣式 */
        .sidebar h3 {
            margin-bottom: 20px; /* 設定底邊距 */
        }

        /* 左側側邊欄的按鈕樣式 */
        .sidebar button {
            display: block; /* 設定為區塊元素 */
            width: 100%; /* 寬度佔滿容器 */
            padding: 10px; /* 設定內邊距 */
            margin-bottom: 10px; /* 設定底邊距 */
            background-color: #78C1F3; /* 設定背景顏色 */
            color: #fff; /* 設定文字顏色 */
            border: none; /* 去除邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            cursor: pointer; /* 設定滑鼠指針樣式為手型 */
            text-align: left; /* 設定文字居左對齊 */
        }

            /* 左側側邊欄的按鈕樣式 - 滑鼠懸停時 */
            .sidebar button:hover {
                background-color: #155074; /* 設定懸停時的背景顏色 */
            }

        /* 表格樣式 */
        table {
            width: 400px; /* 寬度 */
            border-collapse: collapse; /* 設定邊框合併 */
            margin-bottom: 20px; /* 設定底邊距 */
        }

        /* 表格的表頭和內容樣式 */
        th, td {
            border: 1px solid #ccc; /* 設定邊框 */
            padding: 8px; /* 設定內邊距 */
            text-align: left; /* 設定文字居左對齊 */
        }

        /* 表格的表頭樣式 */
        th {
            background-color: #9BE8D8; /* 設定背景顏色 */
        }

        /* 表單元素樣式 - 文本框、數字輸入框、下拉選項、多行文本框 */
        input[type="text"],
        input[type="number"],
        select,
        textarea {
            width: 400px; /* 寬度佔滿容器 */
            padding: 8px; /* 設定內邊距 */
            border: 1px solid #ccc; /* 設定邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            box-sizing: border-box; /* 設定盒模型為border-box，使寬高包括邊框和內邊距 */
            margin-bottom: 10px; /* 設定底邊距 */
        }

        /* 按鈕樣式 */
        input[type="submit"] {
            font-size: 16px; /* 設定字體大小 */
            padding: 10px 20px; /* 設定內邊距 */
            border: none; /* 去除邊框 */
            cursor: pointer; /* 設定滑鼠指針樣式為手型 */
            border-radius: 10px; /* 設定圓角半徑 */
            background-color: #155074; /* 設定背景顏色 */
            color: #F8FDCF; /* 設定文字顏色 */
        }

            /* 按鈕樣式 - 滑鼠懸停時 */
            input[type="submit"]:hover {
                background-color: #78C1F3; /* 設定懸停時的背景顏色 */
            }

        /* 多行文本框的調整大小功能 */
        textarea {
            resize: vertical; /* 設定垂直調整大小 */
            height: 100px; /* 設定初始高度 */
        }
    </style>
}

            @section Scripts
            {
    <script>
        // 事件監聽器，點擊按鈕時動態變更iframe的內容
        function showContent(contentType) {
            const iframeContent = document.getElementById("iframeContent");
            switch (contentType) {
                case 'content1':
                    iframeContent.src = "content1";
                    break;
                case 'content2':
                    iframeContent.src = "content2";
                    break;
                case 'content3':
                    iframeContent.src = "content3";
                    break;
                default:
                    // 預設顯示內容1
                    iframeContent.src = "content1";
            }
        }
    </script>
            }