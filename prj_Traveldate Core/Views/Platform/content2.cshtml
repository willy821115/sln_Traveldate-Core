@section Styles
{
    <style>
        

       

        /* 右側內容區域 */
        .content {
            background-color: #E2F6CA; /* 設定背景顏色 */
            border: 1px solid #ccc; /* 設定邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            padding: 20px; /* 設定內邊距 */
        }

        



        /* 表格樣式 */
        table {
            width: 100%; /* 表格寬度佔滿容器 */
            border-collapse: collapse; /* 設定邊框合併 */
            margin-bottom: 20px; /* 設定底邊距 */
        }

        /* 表格的表頭和內容樣式 */
        th, td {
            border: 1px solid #ccc; /* 設定邊框 */
            padding: 8px; /* 設定內邊距 */
            text-align: left; /* 設定文字居左對齊 */
        }

        /* 表格的表頭樣式 */
        th {
            background-color: #9BE8D8; /* 設定背景顏色 */
        }

        /* 表單元素樣式 - 文本框、數字輸入框、下拉選項、多行文本框 */
        input[type="text"],
        input[type="number"],
        select,
        textarea {
            width: 100%; /* 寬度佔滿容器 */
            padding: 8px; /* 設定內邊距 */
            border: 1px solid #ccc; /* 設定邊框 */
            border-radius: 10px; /* 設定圓角半徑 */
            box-sizing: border-box; /* 設定盒模型為border-box，使寬高包括邊框和內邊距 */
            margin-bottom: 10px; /* 設定底邊距 */
        }

        /* 按鈕樣式 */
        input[type="submit"] {
            font-size: 16px; /* 設定字體大小 */
            padding: 10px 20px; /* 設定內邊距 */
            border: none; /* 去除邊框 */
            cursor: pointer; /* 設定滑鼠指針樣式為手型 */
            border-radius: 10px; /* 設定圓角半徑 */
            background-color: #155074; /* 設定背景顏色 */
            color: #F8FDCF; /* 設定文字顏色 */
        }

            /* 按鈕樣式 - 滑鼠懸停時 */
            input[type="submit"]:hover {
                background-color: #78C1F3; /* 設定懸停時的背景顏色 */
            }

        /* 多行文本框的調整大小功能 */
        textarea {
            resize: vertical; /* 設定垂直調整大小 */
            height: 100px; /* 設定初始高度 */
        }
    </style>
}

