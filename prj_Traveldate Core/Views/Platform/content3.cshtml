        </li>

    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->

            <div class="container-fluid">
                <h2>優惠券-發放</h2>

                <div>
                    <label for="companyName">會員等級:</label>
                    <select id="companyName" name="companyName" required>
                        <option value="">請選擇會員等級</option>
                        <option value="等級A">A</option>
                        <option value="等級B">B</option>
                        <option value="等級C">C</option>
                        <!-- 在此添加其他公司名稱的選項 -->
                    </select>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <div>
                            <label for="productName">會員名稱:</label>
                            <input type="text" id="productName" name="productName" required>
                            <input type="submit" value="搜尋">
                        </div>

                        <div>
                            <label for="companyName">優惠卷:</label>
                            <select id="companyName" name="companyName" required>
                                <option value="">請選擇優惠卷</option>
                                <option value="優惠卷A">優惠卷A</option>
                                <option value="優惠卷B">優惠卷B</option>
                                <option value="優惠卷C">優惠卷C</option>
                                <!-- 在此添加其他公司名稱的選項 -->
                            </select>
                        </div>


                        <table>
                            <tr>
                                <th>客戶姓名</th>
                                <th>性別</th>
                                <th>出生日期</th>
                                <th>居住地區</th>
                                <th>手機號碼</th>
                                <th>密碼</th>
                                <th>管理</th>
                            </tr>
                            <tr>
                                <td>XXX</td>
                                <td>男</td>
                                <td>1993/02/18</td>
                                <td>新北市</td>
                                <td>0982222222</td>
                                <td>123456</td>
                                <td>
                                    @Html.ActionLink("發放","Details","Product",new{/*id=item.PrimaryKey*/},new{@class="btn btn-succes"})
                                </td>
                            </tr>
                        </table>
                        <hr class="divider">
                        <br />
                        <h2>優惠券-新增</h2>
                        <div>
                            <label for="ticketName">輸入優惠卷名稱:</label>
                            <input type="text" id="ticketName" name="ticketName" required>
                            <br />
                            <label for="ticketdiscount">輸入折扣:</label>
                            <input type="text" id="ticketdiscount" name="ticketdiscount" required>
                            <br />
                            <label for="ticketQuantity">輸入數量:</label>
                            <input type="text" id="ticketQuantity" name="ticketQuantity" required>
                            <br />
                            <label for="ticketDescription">輸入優惠卷介紹:</label>
                            <input type="text" id="ticketDescription" name="ticketDescription" required>
                            <br />
                            <br />
                            <br />
                                <label for="ticketExpiration">選擇到期日期:</label>
                                <input type="date" id="ticketExpiration" name="ticketExpiration" required>
                        
                        </div>

                        <input type="submit" value="新增優惠卷">
     
                    </div>

                    @*<!-- Basic Card Example -->*@


                </div>

            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->




        @section Styles
        {
    <style>
        .divider {
            border: none;
            border-top: 5px solid #155074; /* 與框架寬度一致，並增加粗度 */
            margin: 20px 0;
            width: 100%; /* 填滿框架寬度 */
        }


        .content {
            flex: 1;
            background-color: #E2F6CA;
            border: 1px solid #ccc;
            border-radius: 10px;
            padding: 20px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-bottom: 20px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #9BE8D8;
        }

        input[type="text"],
        input[type="number"],
        select,
        textarea {
            width: 100%;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        input[type="submit"] {
            /* 設定按鈕的通用樣式，比如字體、邊框等 */
            font-size: 16px;
            /* 按鈕的內邊距（上下 10 像素，左右 10 像素） */
            padding: 10px 20px;
            /* 去除按鈕的邊框 */
            border: none;
            /* 設置滑鼠游標樣式為指針（表示可點擊） */
            cursor: pointer;
            /* 按鈕的圓角半徑為 10 像素 */
            border-radius: 10px;
            /* 藍色背景 */
            background-color: #155074;
            /* 文字顏色 */
            color: #F8FDCF;
        }

            input[type="submit"]:hover {
                background-color: #78C1F3;
            }

        input[type="date"] {
            width: 160px;
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 10px;
            box-sizing: border-box;
            margin-bottom: 10px;
        }

        textarea {
            resize: vertical;
            height: 100px;
        }
    </style>
        }