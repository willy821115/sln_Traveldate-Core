@model prj_Traveldate_Core.Models.MyModels.CProductWrap

@{
    ViewData["Title"] = "Create";
}
<!-- Page Wrapper -->
<div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <div class="sidebar-brand d-flex align-items-center justify-content-center">
            <div class="sidebar-brand-icon">
                <img src="~/icons/navigation.png" class="icon" id="sidebarToggleTop" />
            </div>
            <div class="sidebar-brand-text mx-3 nav-menu">主選單</div>
        </div>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->
        <li class="nav-item">
            <a class="nav-link" href="~/Dashboard/List">
                <img src="~/icons/home.png" class="subicon" />
                <span>首頁</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseCompany"
               aria-expanded="true" aria-controls="collapseCompany">
                <img src="~/icons/company.png" class="subicon" />
                <span>廠商專區</span>
            </a>
            <div id="collapseCompany" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Company/Edit">帳號管理</a>
                    <a class="collapse-item" href="~/Company/Password">更改密碼</a>
                </div>
            </div>
        </li>
        <!-- Divider -->
        <hr class="sidebar-divider">
        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
               aria-expanded="true" aria-controls="collapseUtilities">
                <img src="~/icons/edit.png" class="subicon" />
                <span>商品管理</span>
            </a>
            <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                 data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Product/List">商品列表</a>
                    <a class="collapse-item" href="~/Product/Create">新增商品</a>
                    <a class="collapse-item" href="~/Trip/List">商品行程</a>
                </div>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAnalyze"
               aria-expanded="true" aria-controls="collapseAnalyze">
                <img src="~/icons/company.png" class="subicon" />
                <span>數據分析</span>
            </a>
            <div id="collapseAnalyze" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Analysis/SellAnalysis">銷售分析</a>
                </div>
            </div>
        </li>

    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->
            
            <div class="container-fluid">
                <h2>新增產品</h2>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                    <div class="row">
                        <div class="col-md-6">

                            @*<!-- Basic Card Example -->*@
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">基本資料</h6>
                                </div>
                                <div class="card-body">
                                    <input asp-for="CompanyId" type="hidden" value="@Model.CompanyId" />
                                    <div class="form-group">
                                        <label class="control-label">產品名稱</label>
                                        <input asp-for="ProductName" class="form-control" />
                                        <span asp-validation-for="ProductName" class="text-danger"></span>
                                    </div>

                                    <div class=" form-group">
                                        <label class="control-label">產品類型</label>
                                        <select asp-for="ProductTypeId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                           @foreach(ProductTypeList type in Model.types)
                                            {
                                                <option value="@type.ProductTypeId">@type.ProductType</option>
                                            }

                                        </select>
                                    </div>

                                    <div class=" form-group">
                                        <label class="control-label">所在國家</label>
                                        <select class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                            @foreach (string type in Model.countries)
                                            {
                                                <option>@type</option>
                                            }
                                        </select>
                                    </div>

                                    <div class=" form-group">
                                        <label class="control-label">所在城市</label>
                                        <select asp-for="CityId" class="form-select form-select-lg mb-3" aria-label=".form-select-lg example">
                                            @foreach (CityList type in Model.cities)
                                            {
                                                <option value="@type.CityId">@type.City</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">產品地址</label>
                                        <input asp-for="Address" class="form-control" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">輪播圖</label>
                                        <input asp-for="photos" type="file" class="form-control" id="photoInput" name="photos" multiple />
                                        
                                    </div>
                                     

                                </div>
                            </div>
                        </div>

                            @*<!-- Basic Card Example -->*@
                        <div class="col-md-6">
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">產品標籤</h6>
                                </div>
                                <div class="card-body">
                                    @foreach (var c in Model.categoryAndTags)
                                    {

                                        <div class="controls-display-row category-click">
                                            <span class="fs-5">@Html.DisplayFor(modelItem => c.category)</span>
                                            <div class="d-flex justify-content-end">
                                                <img id="arrow_bottom_down" src="~/icons/arrow_bottom_down_icon.png">
                                                <img id="arrow_top_up" src="~/icons/arrow_top_up_icon.png">
                                            </div>
                                        </div>
                                        <div class="ms-lg-4 filter-block-toggle">
                                            <ul class="list-unstyled m">
                                                @{
                                                    int id = 0;
                                                    foreach (var t in c.productTags.Distinct())
                                                {
                                                    <li class=" d-flex align-items-center divide-line my-w-80-percent">
                                                        <input name="Tags" type="checkbox" value="@t.ProductTagDetailsId" />
                                                        <span>@Html.DisplayFor(modelItem => t.ProductTagDetailsName)</span>
                                                        </li>
                                                        id++;
                                                    }
                                                }
                                            </ul>
                                        </div>
                                    }
                                </div>
                            </div>

                        </div>
                            
                        


                    </div>
                    
                        <div class="row">
                        <div class="col-md-12">
                            @*<!-- Basic Card Example -->*@
                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">產品描述</h6>
                                </div>
                                <div class="card-body">

                                    <div class="form-group">
                                        <label class="control-label">搜尋頁大綱</label>
                                        <input asp-for="OutlineForSearch" class="form-control" />
                                        <span asp-validation-for="OutlineForSearch" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">大綱</label>
                                        <input asp-for="Outline" class="form-control" />
                                        <span asp-validation-for="Outline" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label class="control-label">產品描述</label>
                                        <textarea name="Description" class="form-control col-lg-12"></textarea>
                                        <span asp-validation-for="Description" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="card shadow mb-4">
                                <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">方案</h6>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="control-label">方案名稱</label>
                                        <input asp-for="PlanName" class="form-control" />
                                        <span asp-validation-for="PlanName" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">方案描述</label>
                                        <textarea asp-for="PlanDescription" class="form-control col-lg-12"></textarea>
                                        <span asp-validation-for="PlanDescription" class="text-danger"></span>
                                    </div>

                                </div>
                            </div>

                            
                                @*<!-- Basic Card Example -->*@
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">行程詳情</h6>
                                    </div>
                                    <div class="card-body">
                                        @*<label class="control-label">照片</label>
                                        <input type="file" class="form-control" id="photoInput" />
                                        <label class="control-label">行程描述</label>
                                        <textarea class="col-lg-12" id="descriptionInput"></textarea>
                                        <button type="button" id="addButton" class="form-control">新增</button>*@
                                    <label class="control-label">行程天數</label>
                                    <input type="number" id="tripDay" placeholder="請輸入數量" />
                                    <button type="button" id="generatetripDay">新增天數</button>
                                    </div>
                                </div>
                                                        

                            
                                @*<!-- Basic Card Example -->*@
                                <div class="card shadow mb-4">
                                    <div class="card-header py-3">
                                    <h6 class="m-0 font-weight-bold text-primary cardTitle">現有行程</h6>
                                    </div>
                                    <div class="card-body" >
                                    <ul id="sortable">


                                    </ul>
                                    </div>
                                </div>

                                
                            


                            <div class="form-group">
                                <input type="submit" value="新增" class="btn btn-primary" />
                                <a asp-action="List" class="btn btn-primary">取消</a>
                            </div>

                        </div>

                        </div>
                      
                         
                            
                  
                
                </form>

              

            </div>
            <!-- /.container-fluid -->

          </div>
        <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <script src="~/js/search_jq.js"></script>
    <script>
        $(function () {
            $("#sortable").sortable({
                revert: true
            });
            $("#draggable").draggable({
                connectToSortable: "#sortable",
                helper: "clone",
                revert: "invalid"
            });
            $("ul, li").disableSelection();
        });


        $('#generatetripDay').click(function () {
            var tripDay = $('#tripDay');
            var numberOftripDay = parseInt(tripDay.val()); // 讀取使用者輸入的值

            // 檢查輸入的值是否有效
            if (!isNaN(numberOftripDay) && numberOftripDay > 0) {
                for (var i = 0; i < numberOftripDay; i++) {
                    var day = i+1;
                    var triplHtml = `<li id="ui-state-default">
                                                    <div class="card mb-3">
                                                        <div class="row g-0">
                                                            <div class="col-md-4">
                                                                        <img src="~/icons/logos/Logo_traveldate.png" class="img-fluid rounded-start" alt="...">
                                                            </div>
                                                            <div class="col-md-8">
                                                                <div class="card-body">
                                                                    <div class="modal-header">
                                                                        <h5 class="card-title">第${day}天</h5>
                                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                                    </div>
                                                                                    <input type="hidden" id="photoInput" name="TripDays" value="${day}" />
                                                                                    <input type="file" class="form-control" id="photoInput" name="TripDetailphotos" />
                                                                                   <textarea class="col-lg-12 card-text" id="descriptionInput" name="TripDetails"></textarea>
                                                                </div>

                                                            </div>

                                                        </div>
                                                    </div>
                                                </li>`;

                    // 將生成的 SecondModel 添加到 div 中
                    $('#sortable').append(triplHtml);
                }
            } else {
                alert('請輸入有效的數量。');
            }
        });

    </script>


}
@section Styles{
    <style>
        .card-body {
            height: unset;
        }

        .cardTitle {
            font-size: 25px;
        }
    </style>
 }