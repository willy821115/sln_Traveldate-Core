@model prj_Traveldate_Core.ViewModels.CProductListViewModel
@{
    ViewData["Title"] = "List";
}
<div id="wrapper">

    <!-- Sidebar -->
    <ul class="navbar-nav bg-gradient-primary sidebar sidebar-dark accordion" id="accordionSidebar">

        <!-- Sidebar - Brand -->
        <div class="sidebar-brand d-flex align-items-center justify-content-center">
            <div class="sidebar-brand-icon">
                <img src="~/icons/navigation.png" class="icon" id="sidebarToggleTop" />
            </div>
            <div class="sidebar-brand-text mx-3 nav-menu">主選單</div>
        </div>

        <!-- Divider -->
        <hr class="sidebar-divider my-0">

        <!-- Nav Item - Dashboard -->
        <li class="nav-item">
            <a class="nav-link" href="~/Dashboard/List">
                <img src="~/icons/home.png" class="subicon" />
                <span>首頁</span>
            </a>
        </li>

        <!-- Divider -->
        <hr class="sidebar-divider">

        <!-- Nav Item - Pages Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseCompany"
               aria-expanded="true" aria-controls="collapseCompany">
                <img src="~/icons/company.png" class="subicon" />
                <span>供應商專區</span>
            </a>
            <div id="collapseCompany" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Company/Edit">帳號管理</a>
                    <a class="collapse-item" href="~/Company/Password">更改密碼</a>
                </div>
            </div>
        </li>
        <!-- Divider -->
        <hr class="sidebar-divider">
        <!-- Nav Item - Utilities Collapse Menu -->
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseUtilities"
               aria-expanded="true" aria-controls="collapseUtilities">
                <img src="~/icons/edit.png" class="subicon" />
                <span>產品管理</span>
            </a>
            <div id="collapseUtilities" class="collapse" aria-labelledby="headingUtilities"
                 data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Product/List">產品列表</a>
                    <a class="collapse-item" href="~/Product/Create">新增產品</a>
                    <a class="collapse-item" href="~/Trip/List">產品行程</a>
                </div>
            </div>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" href="#" data-toggle="collapse" data-target="#collapseAnalyze"
               aria-expanded="true" aria-controls="collapseAnalyze">
                <img src="~/icons/company.png" class="subicon" />
                <span>數據分析</span>
            </a>
            <div id="collapseAnalyze" class="collapse" aria-labelledby="headingTwo" data-parent="#accordionSidebar">
                <div class="bg-white py-2 collapse-inner rounded">
                    <a class="collapse-item" href="~/Analysis/SellAnalysis">銷售分析</a>
                </div>
            </div>
        </li>

    </ul>
    <!-- End of Sidebar -->
    <!-- Content Wrapper -->
    <div id="content-wrapper" class="d-flex flex-column">

        <!-- Main Content -->
        <div id="content">

            <!-- Begin Page Content -->
            
            <div class="container-fluid">
                <h2>產品列表</h2>
                <div class="row">
                    <div class="col-lg-6">
                        <div class="card shadow mb-4">
                            <div class="card-header py-3">
                                <h6 class="m-0 font-weight-bold text-primary cardTitle">搜尋</h6>
                            </div>
                            <div class="card-body">
                                <div>
                                    <label>產品類型</label>
                                    <select id="selecttype" class="form-select">
                                        @foreach (ProductTypeList type in Model.types )
                                        {
                                            <option value="@type.ProductTypeId">@type.ProductType</option>
                                        }
                                    </select>
                                    <label>審核狀態</label>
                                    <select class="form-select">
                                        @foreach (string status in Model.status)
                                        {
                                            <option>@status</option>
                                        }
                                        
                                    </select>
                                   
                                </div>
                               
                            </div>
                        </div>
                    </div>
                </div>



                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold text-primary cardTitle">產品清單</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <thead>
                                    <tr>
                                        <th>產品名稱</th>
                                        <th>產品類型</th>
                                        <th>所在城市</th>
                                        <th>產品狀態</th>
                                        <th>銷售狀態</th>
                                        <th>上/下架</th>
                                        <th>動作</th>
                                    </tr>
                                </thead>
                                
                                <tbody id="productlist">

                                   @foreach (var item in Model.list) {
                                    <tr>
                                          <td>
                                            <div>@Html.DisplayFor(modelItem => item.ProductName) </div>
                                         </td>
                                        <td>
                                            <div>@Html.DisplayFor(modelItem => item.productType)</div>
                                        </td>
                                        <td>
                                            <div> @Html.DisplayFor(modelItem => item.cityName)</div>
                                        </td>
                                            <td>
                                                <div> @Html.DisplayFor(modelItem => item.productStatus)</div>
                                            </td>
                                            <td>
                                                @if ((bool)item.Discontinued)
                                                {
                                                    <div> 下架</div>
                                                }
                                                else
                                                {
                                                    <div> 上架</div>
                                                }
                                            </td>
                                            
                                        <td>
                                                <button id="continue" class="btn btn-primary">上架</button>
                                                <button id="discontinue" class="btn btn-danger">下架</button>
                                        </td>
                                        <td>
                                                @Html.ActionLink("編輯", "Edit", "Product",new {productID=item.ProductId },new {@class="btn btn-success"})
                                        </td>
                                    </tr>
                                    }

                                    

                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                
            </div>
            <!-- /.container-fluid -->

        </div>
        <!-- End of Main Content -->


    </div>
    <!-- End of Content Wrapper -->

</div>
<!-- End of Page Wrapper -->
@section Styles{
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/jquery.dataTables.min.css" />
    <style>
        .card-body {
            height: unset;
        }

        .cardTitle {
            font-size: 25px;
        }
    </style>
 }
 @section Scripts{
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
 <script>new DataTable('#dataTable');</script>
 <script>
        async function queryByType(typeID) {
            const dashboard = document.getElementById('productlist');
            const response = await fetch(`@Url.Content("~/Product/queryByType")?typeID=${typeID}`);
            const datas = await response.json();
            if (datas != null) {
                const rows = datas.map(row => {
                    const { productName, productType, cityName, productStatus, discontinued, productID } = row
                    return (
                        ` <tr>
                                           <td>${productName}</td>
                                            <td>${productType}</td>
                                            <td>${cityName}</td>
                                             <td>${productStatus}</td>
                                             <td>${discontinued}</td>
                                              <td>
                                                             <button id="continue" class="btn btn-primary">上架</button>
                                                              <button id="discontinue" class="btn btn-danger">下架</button>
                                               </td>
                                                 <td>
                                                             <a href="@Url.Content("~/Product/Edit")?productID=${productID}" class="btn btn-success">編輯</a>
                                                 </td>

                                 </tr>`
                    )

                })
                productlist.innerHTML = rows.join("");
            }
        }
        $('#selecttype').change(function () {
            var typeID = $(this).val();
            queryByType(typeID);
        });
 </script>
 }
