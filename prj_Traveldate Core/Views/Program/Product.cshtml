            const url = `/Program/GetPriceAndMinPeople?date=${formatDate(selectedDate)}&quantity=${value}`;
            fetch(url)
                .then(response => response.json())
                .then(data => {
                    // 更新页面上的价格和最少成行人数
                    priceSpan.textContent = data.price;
                    minPeopleSpan.textContent = data.minPeople;
                })
                .catch(error => {
                    console.error('Error fetching data:', error);
                });
        }

    </script>
